<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient shadow with multiple layers for better blur effect -->
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="#1F000000"
                android:endColor="#00000000" />
            <corners android:radius="30dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Second shadow layer for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:startColor="#0D000000"
                android:endColor="#00000000" />
            <corners android:radius="30dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Content Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>